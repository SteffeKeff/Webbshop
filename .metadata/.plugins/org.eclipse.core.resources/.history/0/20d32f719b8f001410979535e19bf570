import java.util.HashSet;


public final class Authentication {
	public HashSet<Account> accounts = new HashSet<Account>();
	
	public void addCustomer(String username, String password, String email){
		accounts.add(new Admin(username,password,email));
	}
	
	public void addAdmin(String username, String password, String email){
		accounts.add(new Admin(username,password,email));
	}
	
//	public boolean login(String username, String password){
//		if(accounts.toString().contains(username)){
//			return true;
//		}
//		return false;
//	
	public Account getUser(String username, String password, String email){
		Account arrayAccounts[] = accounts.toArray(new Account[0]);
		
		for(int i = 0;i<accounts.size();i++){
			if(arrayAccounts[i] == new Account(username,password,email)){
				return arrayAccounts[i];
			}
		}
		return new Account("","","");
	}
}
