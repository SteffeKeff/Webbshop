import java.util.Date;


public class Main {

	public static void main(String[] args) {
		
		ShopService ss = new ShopService();
		
		//ss.addAdmin("SteffeAdmin", "Keff", "totepote@live.se");
		ss.addCustomer("Steffe", "Keff", "totepote@live.se", "Stefan", "De Geer", "Sommarbo 228", "0768646474");
		ss.addCustomer("Be", "oz", "beoz@hotmail.com", "be", "oz", "Nynäsvägen 1", "070123456789");
		ss.addItem("Cars", "BMW", "BMW AB", "320D", "Very good car!", "PNG1", 100, 10);
		ss.addItem("Knappar", "Bra knapp", "Knapparna AB", "SuperKnappen", "Extremt bra knapp!", "PNG2", 10, 1000);
		System.out.println(ss.getItems());
		
		System.out.println();
		System.out.println("Varukorg1: "+ss.getAccount("Steffe").getShoppingCart());
		ss.getAccount("Steffe").addItem(ss.getItem("BMW"));
		System.out.println("Varukorg2: " + ss.getAccount("Steffe").getShoppingCart());
		
		System.out.println();
		ss.getAccount("Be").addItem(ss.getItem("Bra knapp"));
		System.out.println(ss.getAccount("Be").getShoppingCart());
		ss.getAccount("Be").addOrder();
		System.out.println(ss.getAccount("Be").getOrders());
		ss.getAccount("Be").getOrder(0).setDateShipped(new Date(System.currentTimeMillis()));
		System.out.println(ss.getAccount("Be").getOrder(0));
		
		
		System.out.println("-----");
		ss.addOrder(ss.getAccount("Be"));
		System.out.println(ss.getAllOrders());
		
	}

}